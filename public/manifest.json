{
  "manifest_version": 3,
  "name": "Prompt History Recall - プロンプト履歴呼び戻し",
  "short_name": "Prompt History Recall",
  "version": "1.0.0",
  "description": "AIチャット内で過去のプロンプトを上矢印キーなどで呼び戻せます",
  "icons": {
    "48": "icons/icon.png"
  },
  "permissions": ["storage", "tabs"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://claude.ai/*", "https://perplexity.ai/*", "https://copilot.microsoft.com/*", "https://x.com/i/grok", "https://www.notion.so/*"],
      "js": ["content.js"]
    }
  ],
  "commands": {
    "navigate-history-up": {
      "suggested_key": {
        "default": "Alt+Up"
      },
      "description": "過去のプロンプトを表示（デフォルト: Alt+Up）"
    },
    "navigate-history-down": {
      "suggested_key": {
        "default": "Alt+Down"
      },
      "description": "新しいプロンプトへ戻る（デフォルト: Alt+Down）"
    }
  }
}
