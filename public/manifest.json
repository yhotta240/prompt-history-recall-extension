{
  "manifest_version": 3,
  "name": "Prompt History Recall - プロンプト履歴呼び戻し",
  "short_name": "Prompt History Recall",
  "version": "0.1.0",
  "description": "AIチャット内で過去のプロンプトを上矢印キーなどで呼び戻せます",
  "icons": {
    "48": "icons/icon.png"
  },
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"]
    }
  ]
}
